<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="utf-8">
<title><%= title %></title>
<link rel="stylesheet" href="/stylesheets/ui.admin.css"> 
<link rel="stylesheet" href="/stylesheets/circle.css"> 
<script src="/javascript/common.js"></script>
</head> 


<body> 
<div class="wrap"> 
    <div class="container"> 
        
        <% include ./inc/header %>
        <section>
            <div class="header">
                <div class="header-title">
                    Header Info
                </div>
                <div class="header-info">
                    Info
                </div>
                <dlv class="login">
                    Login Info
                </dlv>
            </div>
            <div class="contents">
                <h3>Dashboard</h3> 

                <div class="box"> 
                    <div class="dan">
                        <h4>TOTAL ITEM</h4>
                        <div class="c100 p100 center">
                            <span><%= total_item_length %></span>
                            <div class="slice">
                                <div class="bar"></div>
                                <div class="fill"></div>
                            </div>
                        </div>
                    </div> 
                    <div class="dan">
                        <h4>STEP 1</h4>
                        <div class="c100 p54 green center">
                            <span><%= step1_length %></span>
                            <div class="slice">
                                <div class="bar"></div>
                                <div class="fill"></div>
                            </div>
                        </div>
                    </div> 
                    <div class="dan">
                        <h4>STEP 2</h4>
                        <div class="c100 p72 orange center">
                            <span><%= step2_length %></span>
                            <div class="slice">
                                <div class="bar"></div>
                                <div class="fill"></div>
                            </div>
                        </div>
                    </div> 
                </div> 

                
                <h3><%= listDate %></h3> 
                <table class="list-table">
                    <colgroup>
                        <col width="120">
                        <col width="80">
                        <col width="110">
                        <col width="">
                        <col width="150">
                        <col width="150">
                        <col width="150">
                    </colgroup>
                    <thead>
                        <tr>
                            <th>종목</th>
                            <th>코드</th>
                            <th>스텝</th>
                            <th>등락율</th>
                            <th>오늘거래량</th>
                            <th>평균거래량(30일)</th>
                            <th>평균거래량(60일)</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% rowList.forEach( (item) => { 
                        function AddComma(data_value) {
                            return Number(data_value).toLocaleString('en').split(".")[0];
                          }
                        var tv = AddComma(item.today_volume);
                        var v30 = AddComma(item.avr30_volume);
                        var v60 = AddComma(item.avr60_volume);
                        %>                     
                        <tr>
                            <td><%= item.name %></td>
                            <td class="center"><%= item.code %></td>
                            <td class="center"><div class="icon-<%= item.alg_step %>"><%= item.alg_step %></div></td>
                            <td class="center"><%= item.change_per %>%</td>
                            <td class="center"><%= tv %></td>
                            <td class="center"><%= v30 %></td>
                            <td class="center"><%= v60 %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>

                
            </div>
        </section> 
    </div> 
</div> 
</body> 
</html> 