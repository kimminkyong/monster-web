<!-- Chart Draw Scripts -->
<script>
function chartDraw(){
    var chartdata = [];
    var groupingUnits = [['day',[1]], ['week',[1]]]
    chartdata = ohlc.reverse();
    chartVol = chartVol.reverse();
    
    Highcharts.stockChart('chartGraph',{
        title: {
            text: '가격'
        },
        rangeSelector: {
            selected: 2,
            inputEnabled: false
        },
        plotOptions: {
            candlestick: {
                downColor: 'blue',
                upColor: 'red'
            }
        },
        xAxis: {
            type: 'datetime',
            labels: {
                format: '{value:%y-%m-%e}'
            }
        },
        yAxis: [{
            labels: {
                align: 'right',
                x: -3
            },
            title: {
                text: 'OHLC'
            },
            height: '60%',
            lineWidth: 2,
            resize: {
                enabled: true
            }
        }, {
            labels: {
                align: 'right',
                x: -3
            },
            title: {
                text: 'Volume'
            },
            top: '65%',
            height: '35%',
            offset: 0,
            lineWidth: 2
        }],
        series: [{
            name: '가격',
            type: 'candlestick',
            data: chartdata,
            tooltip: {
                valueDecimals: 0
            }
        }, {
            type: 'column',
            name: '거래량',
            data: chartVol,
            yAxis: 1
        },{
            type:'flags',
            data:[{
                x:"",
                title:'기준일',
                text:'test'
            }],
            color: '#5F86B3',
            fillColor: '#5F86B3',
            onSeries: 'dataseries',
            width: 30,
            style: { // text style
                color: 'white'
            },
            states: {
                hover: {
                    fillColor: '#395C84' // darker
                }
            }
        }
        ]
    });
}
chartDraw();
</script>

